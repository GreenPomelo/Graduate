/** font-size */
number-font-size = 80rpx
title-font-size = 40rpx
button-font-size = 36rpx
subtitle-font-size = 34rpx
list-font-size = 34rpx
sub-font-size = 28rpx
button-small-font-size = 26rpx
like-font-size = 26rpx
desc-font-size = 22rpx
sub-font =
  font-size sub-font-size
  color sub-color
/** font-color */
title-color = #1a1a1a
main-color = #1a1a1a
sub-color = #8b8b8b
avatar-size =
  width 86rpx
  height 86rpx
/** status-bar styles */
status-bar-bg-color = #f5fffc
status-bar-height = 158rpx
status-bar-shadow = 0 5rpx 30rpx rgba(11, 3, 5, 0.09)
/** icon */
selcted-icon-color = #1a1a1a
icon-color = #b2b2b2
/** card */
card-border-color = #e5e5e5
card-shadow = 0px 0px 30px 0px rgba(11, 3, 5, 0.2)
card-1-color = #0c654a
card-2-color = #6abbdc
card-3-color = #ffbd5e
card-4-color = #c85eff
card-5-color = #29c322
card-6-color = #df4b78
card-bg-color-1 =
  background linear-gradient(120deg, rgba(0, 202, 195, 0.5), rgba(0, 202, 143, 0.5))
card-bg-color-2 =
  background linear-gradient(120deg, rgba(164, 231, 249, 0.5), rgba(106, 187, 220, 0.75))
card-bg-color-3 =
  background linear-gradient(120deg, rgba(255, 229, 160, 0.5), rgba(255, 189, 94, 0.5))
card-bg-color-4 =
  background linear-gradient(120deg, rgba(255, 178, 252, 0.5), rgba(200, 94, 255, 0.5))
card-bg-color-5 =
  background linear-gradient(120deg, rgba(181, 255, 200, 0.5), rgba(41, 195, 34, 0.5))
card-bg-color-6 =
  background linear-gradient(120deg, rgba(255, 175, 200, 0.5), rgba(223, 75, 120, 0.5))
card-bg-color-7 =
  background linear-gradient(-41deg, rgba(255, 192, 0, 0.2) 0%, rgba(255, 234, 0, 0.2) 100%), linear-gradient(#fffab0, #fffab0)
card-bg-color-8 =
  background linear-gradient(132deg, rgba(255, 115, 240, 0.2) 0%, rgba(255, 0, 246, 0.35) 100%), linear-gradient(#fffab0, #fffab0)
title =
  font-size title-font-size
  font-weight 700
  color title-color
card =
  position relative
  // border 1px solid card-border-color
  border-radius 20rpx
  box-sizing border-box
  box-shadow card-shadow
  overflow hidden
  transition box-shadow 0.5s ease-in-out
/** nav-bar */
nav-bg-color = #fafafa
/** course-card */
course-list-title-color = #4ab39d
line =
  width 100%
  height 1rpx
  background #dcdcdc
  transform scale(1.2, 0.5)